<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layBase">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvFisrtName"
            tools:text="@string/first_name"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvLastName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            tools:text="@string/last_name"
            app:layout_constraintStart_toEndOf="@+id/tvFisrtName"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPosition"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFisrtName" tools:text="@string/position" android:textSize="12sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvLabelPosition"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNumber"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFisrtName" tools:text="@string/number" android:textSize="12sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelNumber" android:textSize="12sp"
            android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/tvNumber"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFisrtName"/>
    <TextView
            android:text="@string/position_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLabelPosition" android:textStyle="bold"
            android:textSize="12sp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/tvFisrtName" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvFisrtName"/>
</androidx.constraintlayout.widget.ConstraintLayout>